{
  "name": "pokedex-auth-service",
  "version": "1.0.0",
  "description": "Authentication microservice for Pokedex application",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "ts-node prisma/seed.ts",
    "test": "vitest",
    "test:api": "bash scripts/gen-keys.sh && playwright test -c playwright.config.ts --project=API",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "setup": "bash scripts/setup.sh",
    "dev:full": "bash scripts/dev.sh",
    "deploy": "bash scripts/deploy.sh",
    "test:integration": "bash scripts/test.sh",
    "db:setup": "bash scripts/db.sh setup",
    "db:reset": "bash scripts/db.sh reset",
    "db:backup": "bash scripts/db.sh backup",
    "db:status": "bash scripts/db.sh status",
    "monitor": "bash scripts/monitor.sh status",
    "monitor:watch": "bash scripts/monitor.sh watch",
    "monitor:health": "bash scripts/monitor.sh health",
    "logs": "docker-compose logs -f auth-service",
    "logs:db": "docker-compose logs -f mysql",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build --no-cache",
    "keys:generate": "bash scripts/generate-keys.sh"
  },
  "dependencies": {
    "@prisma/client": "^5.1.1",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^5.1.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.4.5",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "vitest": "^1.6.1"
  },
  "keywords": [
    "auth",
    "jwt",
    "microservice",
    "pokemon",
    "typescript"
  ],
  "author": "Mateusz",
  "license": "MIT"
}
